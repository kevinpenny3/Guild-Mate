@model Guildmate.Models.ViewModels.CharacterViewModels.CharacterCreateViewModel

@{
    ViewData["Title"] = "Create";
}
 <div class="CreateCharacter">
     <div class="Index-Title">
        <h1>Create Your Character</h1>
     </div>
        <div class="row">
            <div class="col-md-4 characterCreateForm">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Character Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div id="factionOptions">
                        <div class="form-group">
                            <label asp-for="FactionId" class="control-label">Faction</label>
                            <select asp-for="FactionId" class="form-control factionSelect" asp-items="@Model.FactionOptions"><option selected disabled>Choose A Faction</option></select>
                        </div>
                    </div>

                    <div id="raceOptions">
                        <div class="form-group">
                            <label asp-for="RaceId" class="control-label">Race</label>
                            <select asp-for="RaceId" class="form-control" asp-items="@Model.RaceOptions"><option selected disabled>Choose A Race</option></select>
                        </div>
                    </div>

                    <div id="classOptions">

                        <div class="form-group" id="HumanId">
                            <label asp-for="ClassId" class="control-label">Class</label>
                            <select asp-for="ClassId" class="form-control" asp-items="@Model.ClassOptions"><option selected disabled>Choose A Class</option></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary btn-block" />
                    </div>
                </form>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
            </div>
        </div>
</div>





