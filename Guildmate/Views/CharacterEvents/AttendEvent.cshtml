@model Guildmate.Models.ViewModels.CharacterViewModels.CharacterEventsViewModel

@{
    ViewData["Title"] = "AttendEvent";
}

<h1>AttendEvent</h1>

<h4>Select Your Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AttendEvent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class ="form-control" asp-items="@Model.RoleOptions"><option selected disabled>Choose A Role</option></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="hidden" value="@Model.EventId" name="eventId" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
