@model Guildmate.Models.Guild

@{
    ViewData["Title"] = "Details";
}

    <h1>@Html.DisplayFor(model => model.Name)</h1>

<div class="GuildDetails">

        <div class="GuildInfo">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Server)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Server.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Faction)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Faction.Name)
                </dd>
            </dl>
            @foreach (var character in Model.Characters)
            {
                if (character.RankId == 1)
                {
                    <form asp-action="DeleteGuild" asp-route-id="@Model.GuildId">
                        <input type="submit" value="Delete" />
                    </form>
                }
                if (character.GuildId == null)
                {
                    <form asp-action="JoinGuild" asp-route-id="@Model.GuildId" asp-controller="Characters">
                        <input type="submit" value="Delete" />
                    </form>
                }

            }
        </div>

    <div class="GuildRoster">
    <h3>Guild Roster</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Race
                    </th>
                    <th>
                        Class
                    </th>
                    <th>
                        Rank
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var character in Model.Characters)
                { 
                        <tr class="@Html.DisplayFor(item => character.ClassRace.Class.Name)Bg">
                            <td>
                                @Html.DisplayFor(item => character.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => character.ClassRace.Class.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(item => character.ClassRaceId)
                            </td>
                            <td>
                                @Html.DisplayFor(item => character.RankId)
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
