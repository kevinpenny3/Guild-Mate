@model Guildmate.Models.Guild

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Guild</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Server)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Server.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Faction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Faction.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Banner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Banner)
        </dd>
        <dt class="col-sm-2">
            Characters
        </dt>
        <dd class="col-sm-10">
            <ul>

                @foreach (var character in Model.Characters)
                {
                    <li>
                        @Html.DisplayFor(modelItem => character.Name)

                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GuildId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
