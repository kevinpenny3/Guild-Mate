@model IEnumerable<Guildmate.Models.Guild>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Server)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Banner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Server.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faction.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Banner)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GuildId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GuildId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GuildId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
