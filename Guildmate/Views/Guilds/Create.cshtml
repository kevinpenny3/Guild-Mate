@model Guildmate.Models.ViewModels.GuildViewModels.GuildCreateViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="GuildCreate">
    <div class="Index-Title">
    <h1>Create A Guild</h1>
    </div>
    <div class="row">
        <div class="col-md-4 guildCreateForm">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Guild Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServerId" class="control-label">Server</label>
                    <select asp-for="ServerId" class="form-control" asp-items="@Model.ServerOptions"><option selected disabled>Choose A Server</option></select>
                </div>
                <div class="form-group">
                    <label asp-for="FactionId" class="control-label">Faction</label>
                    <select asp-for="FactionId" class="form-control" asp-items="@Model.FactionOptions"><option selected disabled>Choose A Faction</option></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
        </div>
    </div>


</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }